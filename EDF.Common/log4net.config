<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <log4net debug="false">
    
    <!-- Sets Console appender -->
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value=" %-2level [%method] - %message%newline"/>
      </layout>
    </appender>
    
    <!-- Sets File appender -->
    <appender name="FileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="${LocalAppData}\eDrawingFinder\application.log"/>
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="5"/>
      <maximumFileSize value="10MB"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%-6date %-6[%level] - %message%newline"/>
      </layout>
    </appender>

    <!-- Sets ColoredConsole appender 
    <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="ERROR"/>
        <foreColor value="Red, HighIntensity"/>
      </mapping>
      <mapping>
        <level value="Warn" />
        <foreColor value="Yellow"/>
      </mapping>
      <mapping>
        <level value="Info"/>
        <foreColor value="Green"/>
      </mapping>
      <mapping>
        <level value="Debug"/>
        <foreColor value="Blue"/>
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%-6date %-6[%level] - %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="Debug"/>
        <param name="LevelMax" value="Fatal"/>
      </filter>
    </appender>
    -->

    <!-- (high) OFF > FATAL > ERROR > WARN > INFO > DEBUG > ALL (low) -->
    <!-- Applies Levels to references -->
    <root>
      <level value="ALL"/>
      <appender-ref ref="FileAppender"/>
      <appender-ref ref="ConsoleAppender"/>
    </root>


    <!-- Print only messages of level WARN or above in the package EDF.Common.Log 
    <logger name="EDF.Common.Log">
    <level value="DEBUG"/>
    </logger>
    -->

</log4net>
</configuration>
